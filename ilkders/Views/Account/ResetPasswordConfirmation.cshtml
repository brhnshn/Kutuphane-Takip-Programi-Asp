@{
    ViewData["Title"] = "Şifre Değişti";
}

<div class="container py-5 mt-5 text-center">
    <div class="card border-0 shadow-sm rounded-4 d-inline-block p-5">

        <div class="text-success mb-3">
            <i class="fas fa-lock-open fa-4x"></i>
        </div>

        <h3 class="fw-bold">İşlem Tamam!</h3>
        <p class="text-muted">Şifreniz başarıyla sıfırlandı. Artık yeni şifrenizle giriş yapabilirsiniz.</p>

        <p class="small text-muted mt-3 mb-0">
            <i class="fas fa-spinner fa-spin me-1"></i> 3 saniye içinde giriş sayfasına yönlendiriliyorsunuz...
        </p>

        <a asp-action="Login" class="btn btn-primary rounded-pill px-4 mt-4"
           style="background: var(--primary-gradient); border:none;">
            Hemen Giriş Yap
        </a>
    </div>
</div>

<script>
    setTimeout(function() {
        window.location.href = '@Url.Action("Login", "Account")';
    }, 3000);
</script>