@model Site.Models.ProfileViewModel

@{
    ViewData["Title"] = "Profilim";

    var basHarf = !string.IsNullOrEmpty(Model.Ad) ? Model.Ad.Substring(0, 1).ToUpper() : "U";
    var tamAd = (!string.IsNullOrEmpty(Model.Ad) && !string.IsNullOrEmpty(Model.Soyad)) ? $"{Model.Ad} {Model.Soyad}" : Model.Email;
    var tarihFormat = Model.UyelikTarihi.Year > 1 ? Model.UyelikTarihi.ToString("MMMM yyyy") : "Bilinmiyor";
}

<div class="container py-5 mt-4">

    <div class="row mb-4 align-items-center">
        <div class="col">
            <h2 class="fw-bold mb-0 text-body">Hesap Ayarları</h2>
            <p class="text-muted small">Kişisel bilgilerinizi ve okuma istatistiklerinizi buradan yönetebilirsiniz.</p>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-lg-4">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden h-100">
                <div class="card-body p-0 d-flex flex-column h-100">

                    <div class="text-center position-relative py-5" style="background: var(--primary-gradient);">
                        <div class="position-absolute top-0 start-0 w-100 h-100 bg-white opacity-10"
                             style="background-image: radial-gradient(rgba(255,255,255,0.5) 1px, transparent 1px); background-size: 20px 20px;"></div>

                        <div class="position-absolute start-50 translate-middle" style="top: 100%;">
                            <div class="rounded-circle bg-body p-1 shadow-lg">
                                <div class="rounded-circle d-flex align-items-center justify-content-center fw-bold text-white fs-1"
                                     style="width: 100px; height: 100px; background: var(--secondary-gradient, linear-gradient(135deg, #f093fb 0%, #f5576c 100%));">
                                    @basHarf
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center pt-5 pb-4 px-4 mt-3 bg-body flex-grow-1">
                        <h4 class="fw-bold mb-1 text-body">@tamAd</h4>
                        <p class="text-muted small mb-3">@Model.Email</p>

                        <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3 py-2">
                            <i class="fas fa-check-circle me-1"></i> Aktif Üye
                        </span>

                        <hr class="my-4 opacity-10">

                        <div class="row text-center">
                            <div class="col-6 border-end border-secondary border-opacity-10">
                                <h5 class="fw-bold mb-0 text-primary">@Model.KitapSayisi</h5>
                                <small class="text-muted">Toplam Kitap</small>
                            </div>
                            <div class="col-6">
                                <h5 class="fw-bold mb-0 text-success">@tarihFormat</h5>
                                <small class="text-muted">Üyelik</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">

            <div class="row g-2 mb-4">

                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 h-100 bg-success bg-opacity-10">
                        <div class="card-body p-3 text-center">
                            <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                            <h6 class="text-muted text-uppercase small fw-bold mb-1" style="font-size: 0.7rem;">Bitirilen</h6>
                            <h3 class="fw-bold text-success m-0">@Model.OkunanKitapSayisi</h3>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 h-100 bg-warning bg-opacity-10">
                        <div class="card-body p-3 text-center">
                            <i class="fas fa-book-reader fa-2x text-warning mb-2"></i>
                            <h6 class="text-muted text-uppercase small fw-bold mb-1" style="font-size: 0.7rem;">Okunuyor</h6>
                            <h3 class="fw-bold text-warning m-0">@Model.OkunuyorSayisi</h3>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 h-100 bg-primary bg-opacity-10">
                        <div class="card-body p-3 text-center">
                            <i class="fas fa-file-alt fa-2x text-primary mb-2"></i>
                            <h6 class="text-muted text-uppercase small fw-bold mb-1" style="font-size: 0.7rem;">Toplam Sayfa</h6>
                            <h3 class="fw-bold text-primary m-0" title="Tüm Kitaplar">
                                @(Model.ToplamSayfa > 1000 ? (Model.ToplamSayfa / 1000.0).ToString("0.0") + "k" : Model.ToplamSayfa.ToString())
                            </h3>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 h-100 bg-danger bg-opacity-10">
                        <div class="card-body p-3 text-center">
                            <i class="fas fa-heart fa-2x text-danger mb-2"></i>
                            <h6 class="text-muted text-uppercase small fw-bold mb-1" style="font-size: 0.7rem;">Favori</h6>
                            <h5 class="fw-bold text-danger m-0 text-truncate" style="font-size: 1rem;">@Model.FavoriTur</h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card border-0 shadow-lg rounded-4 bg-body">

                <div class="card-header bg-transparent border-0 pt-4 px-4 pb-0">
                    <h5 class="fw-bold mb-0 text-body"><i class="fas fa-user-edit me-2 text-primary"></i> Profili Düzenle</h5>
                </div>

                <div class="card-body p-4">

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-@ViewBag.Status alert-dismissible fade show shadow-sm rounded-3 mb-4 border-0" role="alert">
                            <div class="d-flex align-items-center">
                                @if (ViewBag.Status == "success")
                                {
                                    <i class="fas fa-check-circle fs-4 me-3 text-success"></i>
                                }
                                else
                                {
                                    <i class="fas fa-exclamation-circle fs-4 me-3 text-danger"></i>
                                }
                                <div>@ViewBag.Message</div>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Profile" method="post">
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label asp-for="Ad" class="form-label fw-bold small text-muted text-uppercase">Ad</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-body-tertiary border-0 text-body"><i class="fas fa-user text-muted"></i></span>
                                    <input asp-for="Ad" class="form-control bg-body-tertiary border-0 ps-2 text-body" placeholder="Adınız" maxlength="20" />
                                </div>
                                <span asp-validation-for="Ad" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Soyad" class="form-label fw-bold small text-muted text-uppercase">Soyad</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-body-tertiary border-0 text-body"><i class="fas fa-signature text-muted"></i></span>
                                    <input asp-for="Soyad" class="form-control bg-body-tertiary border-0 ps-2 text-body" placeholder="Soyadınız" maxlength="20" />
                                </div>
                                <span asp-validation-for="Soyad" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Email" class="form-label fw-bold small text-muted text-uppercase">E-posta Adresi</label>
                                <div class="input-group opacity-75">
                                    <span class="input-group-text bg-body-tertiary border-0 text-body"><i class="fas fa-envelope text-muted"></i></span>
                                    <input asp-for="Email" class="form-control bg-body-tertiary border-0 ps-2 text-body" readonly style="cursor: not-allowed;" />
                                    <span class="input-group-text bg-body-tertiary border-0 text-success"><i class="fas fa-lock small"></i></span>
                                </div>
                                <small class="text-muted ms-1" style="font-size: 0.75rem;">Güvenlik nedeniyle e-posta adresi değiştirilemez.</small>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Telefon" class="form-label fw-bold small text-muted text-uppercase">Telefon</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-body-tertiary border-0 text-body"><i class="fas fa-phone text-muted"></i></span>
                                    <input asp-for="Telefon" class="form-control bg-body-tertiary border-0 ps-2 text-body" placeholder="0555..." maxlength="11" oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                                </div>
                                <span asp-validation-for="Telefon" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4 opacity-10">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-soft px-4 rounded-pill fw-bold shadow-sm">
                                <i class="fas fa-times me-2"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-primary px-4 rounded-pill fw-bold shadow-sm"
                                    style="background: var(--primary-gradient); border:none;">
                                <i class="fas fa-save me-2"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card border-danger border-opacity-25 shadow-lg rounded-4 mt-4 overflow-hidden">
                <div class="card-body p-4 bg-body d-flex align-items-center justify-content-between flex-wrap gap-3">
                    <div>
                        <h6 class="fw-bold text-danger mb-1"><i class="fas fa-exclamation-triangle me-2"></i> Hesap Sil</h6>
                        <small class="text-danger text-opacity-75">Hesabınızı ve tüm verilerinizi kalıcı olarak siler.</small>
                    </div>

                    <a asp-action="DeleteAccount" class="btn btn-outline-danger rounded-pill fw-bold px-4 shadow-sm">
                        Hesabı Sil
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}