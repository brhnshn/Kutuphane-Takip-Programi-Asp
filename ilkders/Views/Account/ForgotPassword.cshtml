@model Site.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                            <i class="fas fa-key fa-2x text-primary"></i>
                        </div>
                        <h3 class="fw-bold">Şifreni mi Unuttun?</h3>
                        <p class="text-muted small">E-posta adresini gir, sana sıfırlama bağlantısı gönderelim.</p>
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        <div class="form-floating mb-4">
                            <input asp-for="Email" class="form-control bg-body-tertiary border-0" placeholder="E-posta" />
                            <label asp-for="Email" class="text-muted">E-posta Adresi</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold shadow-sm" style="background: var(--primary-gradient); border:none;">
                            Sıfırlama Bağlantısı Gönder
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-action="Login" class="text-decoration-none fw-bold small text-muted">
                            <i class="fas fa-arrow-left me-1"></i> Giriş'e Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>