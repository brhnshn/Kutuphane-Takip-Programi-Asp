@model Site.Models.Kitap

@{
    ViewData["Title"] = "Kitap Sil";
}

<div class="container py-5 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                <div class="card-header border-0 py-5 text-center text-white"
                     style="background: linear-gradient(135deg, #ff416c, #ff4b2b);">

                    <div class="bg-white bg-opacity-25 rounded-circle d-inline-flex align-items-center justify-content-center mb-3 shadow-sm"
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-trash-alt fa-2x text-white"></i>
                    </div>

                    <h4 class="fw-bold mb-2">Silmek İstediğine Emin misin?</h4>
                    <p class="mb-0 opacity-75 small px-4">
                        Bu işlem geri alınamaz ve <strong>@Model.KitapAdı</strong> adlı kitap kalıcı olarak silinir.
                    </p>
                </div>

                <div class="card-body p-4 p-md-5 bg-body">

                    <div class="bg-body-tertiary rounded-4 p-4 border mb-4 text-center shadow-sm">
                        <h5 class="fw-bold text-primary mb-1">@Model.KitapAdı</h5>
                        <p class="text-muted mb-0">@Model.YazarAdı</p>

                        <hr class="my-3 opacity-10">

                        <div class="d-flex justify-content-center gap-3 text-muted small">
                            <span><i class="fas fa-building me-1"></i> @Model.YayınEvi</span>
                            <span>•</span>
                            <span><i class="fas fa-tag me-1"></i> @Model.Tür</span>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-grid gap-2">
                        <input type="hidden" asp-for="ID" />

                        <button type="submit" class="btn btn-danger btn-lg rounded-pill fw-bold shadow-sm">
                            <i class="fas fa-trash me-2"></i> Evet, Kitabı Sil
                        </button>

                        <a asp-action="Index" class="btn btn-soft btn-lg rounded-pill fw-bold mt-2 shadow-sm">
                            Hayır, Vazgeç
                        </a>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>