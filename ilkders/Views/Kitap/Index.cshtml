@model Site.Models.PaginatedList<Site.Models.Kitap>

@{
    ViewData["Title"] = "Kitaplarım";
    string aktifFiltre = ViewBag.AktifFiltre as string;

    string filtreAdi = "Tümü";
    if (aktifFiltre == "Okunuyor") { filtreAdi = "Okunuyor"; }
    else if (aktifFiltre == "Okundu") { filtreAdi = "Bitti"; }
    else if (aktifFiltre == "Listede") { filtreAdi = "Listede"; }
}

<div class="container py-5 mt-4">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h2 class="fw-bold mb-0 text-primary">
                <i class="fas fa-book-open me-2"></i>Kütüphanem
            </h2>
            <p class="text-muted small mb-0">Toplam @Model.TotalPages sayfa kitap listeleniyor.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary px-4 py-2 rounded-pill shadow-sm fw-bold"
           style="background: var(--primary-gradient); border: none;">
            <i class="fas fa-plus me-2"></i> Yeni Kitap Ekle
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-4 bg-body-tertiary">
        <div class="card-body p-3">
            <div class="row g-3 align-items-center">
                <div class="col-lg-8">
                    <form id="searchForm" asp-action="Index" method="get" class="d-flex gap-2">
                        @if (!string.IsNullOrEmpty(aktifFiltre))
                        {
                            <input type="hidden" name="durumFiltresi" value="@aktifFiltre" />
                        }

                        <div class="input-group border-0">
                            <span class="input-group-text bg-body-tertiary border-0 ps-3 text-muted rounded-start-pill"><i class="fas fa-search"></i></span>
                            <input type="text" id="searchInput" name="aramaMetni" class="form-control bg-body-tertiary border-0 shadow-none rounded-end-pill"
                                   placeholder="Kitap adı, yazar veya tür ara..." value="@ViewData["CurrentFilter"]">
                        </div>
                        <button type="submit" class="btn btn-primary rounded-pill px-3 shadow-sm" style="background: var(--primary-gradient); border:none;">Ara</button>
                    </form>
                    <div id="searchWarning" class="text-danger fw-bold small ms-3 mt-1" style="display: none;">
                        <i class="fas fa-exclamation-circle me-1"></i> Lütfen aramak için bir kelime giriniz.
                    </div>
                </div>

                <div class="col-lg-4 text-lg-end">
                    <div class="dropdown d-inline-block">
                        <button class="btn btn-soft rounded-pill px-4 fw-bold dropdown-toggle shadow-sm w-100 w-lg-auto" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-filter me-2 text-primary"></i>
                            <span class="text-body">Durum: @filtreAdi</span>
                        </button>

                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg rounded-4 p-2 mt-2">
                            <li><h6 class="dropdown-header text-uppercase small fw-bold opacity-50">Okuma Durumu</h6></li>
                            <li><a class="dropdown-item rounded-3 mb-1 @(string.IsNullOrEmpty(aktifFiltre) ? "active fw-bold" : "")" asp-action="Index" asp-route-aramaMetni="@ViewData["CurrentFilter"]"><i class="fas fa-layer-group me-2 opacity-50"></i> Tümü</a></li>
                            <li><a class="dropdown-item rounded-3 mb-1 @(aktifFiltre == "Okunuyor" ? "active fw-bold" : "")" asp-action="Index" asp-route-durumFiltresi="Okunuyor" asp-route-aramaMetni="@ViewData["CurrentFilter"]"><i class="fas fa-book-reader me-2 text-warning"></i> Okunuyor</a></li>
                            <li><a class="dropdown-item rounded-3 mb-1 @(aktifFiltre == "Okundu" ? "active fw-bold" : "")" asp-action="Index" asp-route-durumFiltresi="Okundu" asp-route-aramaMetni="@ViewData["CurrentFilter"]"><i class="fas fa-check-circle me-2 text-success"></i> Bitti</a></li>
                            <li><a class="dropdown-item rounded-3 @(aktifFiltre == "Listede" ? "active fw-bold" : "")" asp-action="Index" asp-route-durumFiltresi="Listede" asp-route-aramaMetni="@ViewData["CurrentFilter"]"><i class="fas fa-list me-2 text-secondary"></i> Listede</a></li>
                        </ul>
                    </div>
                    @if (!string.IsNullOrEmpty(aktifFiltre) || !string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                    {
                        <a asp-action="Index" class="btn btn-light rounded-circle border shadow-sm ms-2" title="Tüm Filtreleri Temizle"><i class="fas fa-times text-danger"></i></a>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        @if (Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-body-secondary border-bottom">
                        <tr>
                            <th class="ps-4 py-3 text-muted small text-uppercase fw-bold">Kitap Bilgisi</th>
                            <th class="py-3 text-muted small text-uppercase fw-bold">Yazar & Yayın</th>
                            <th class="py-3 text-muted small text-uppercase fw-bold">Tür</th>
                            <th class="py-3 text-muted small text-uppercase fw-bold">Durum & Puan</th>
                            <th class="py-3 text-muted small text-uppercase fw-bold">Yıl</th>
                            <th class="py-3 text-end pe-4 text-muted small text-uppercase fw-bold">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var turRenk = GetTurRenk(item.Tür);
                            var durumRenk = GetDurumRenk(item.Durum);

                            <tr style="cursor: pointer; transition: background-color 0.2s;" onclick="location.href='@Url.Action("Details", "Kitap", new { id = item.ID })'">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-3 d-flex align-items-center justify-content-center me-3 @turRenk.BgClass" style="width: 45px; height: 45px;">
                                            <i class="fas fa-book @turRenk.IconClass"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-body">@item.KitapAdı</div>
                                            @if (!string.IsNullOrEmpty(item.ISBN))
                                            {
                                                <div class="text-muted small" style="font-size: 0.75rem;">ISBN: @item.ISBN</div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-semibold">@item.YazarAdı</div>
                                    <div class="text-muted small">@item.YayınEvi</div>
                                </td>
                                <td>
                                    <span class="badge @turRenk.BadgeClass border @turRenk.BorderClass rounded-pill px-3 py-2 fw-normal">@item.Tür</span>
                                </td>
                                <td>
                                    <div class="d-flex flex-column align-items-start gap-1">
                                        <span class="badge @durumRenk.BadgeClass border @durumRenk.BorderClass rounded-pill px-3 py-1 fw-normal">@item.Durum</span>
                                        @if (item.Puan > 0)
                                        {
                                            <div class="text-warning small" title="@item.Puan / 5 Puan">
                                                @for (int i = 0; i < item.Puan; i++)
                                                {
                                                    <i class="fas fa-star"></i>
                                                }
                                                @for (int i = item.Puan; i < 5; i++)
                                                {
                                                    <i class="far fa-star text-muted opacity-25"></i>
                                                }
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td class="text-muted fw-bold">@item.Yıl</td>
                                <td class="text-end pe-4">
                                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-soft text-primary shadow-sm border-0" onclick="event.stopPropagation();" title="İncele"><i class="fas fa-eye"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-3 text-muted opacity-25"><i class="fas fa-book-open fa-4x"></i></div>
                <h4 class="fw-bold text-muted">Sonuç Bulunamadı</h4>
                <p class="text-muted small">Aradığınız kriterlere uygun kitap yok.</p>
                @if (!string.IsNullOrEmpty(aktifFiltre))
                {
                    <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4 mt-2">Filtreleri Temizle</a>
                }
            </div>
        }
    </div>

    @if (Model.TotalPages > 1)
    {
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";

        <div class="d-flex justify-content-center align-items-center mt-4 gap-2">
            <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-aramaMetni="@ViewData["CurrentFilter"]" asp-route-durumFiltresi="@aktifFiltre" class="btn btn-light border shadow-sm rounded-pill px-3 @prevDisabled"><i class="fas fa-chevron-left me-1"></i> Önceki</a>
            <span class="text-muted small fw-bold px-2">Sayfa @Model.PageIndex / @Model.TotalPages</span>
            <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-aramaMetni="@ViewData["CurrentFilter"]" asp-route-durumFiltresi="@aktifFiltre" class="btn btn-light border shadow-sm rounded-pill px-3 @nextDisabled">Sonraki <i class="fas fa-chevron-right ms-1"></i></a>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.getElementById("searchForm").addEventListener("submit", function(event) {
            var inputVal = document.getElementById("searchInput").value.trim();
            var warningDiv = document.getElementById("searchWarning");
            var hasFilter = "@aktifFiltre" !== "";
            if (inputVal === "" && !hasFilter) {
                event.preventDefault();
                warningDiv.style.display = "block";
                setTimeout(function() { $(warningDiv).fadeOut(); }, 3000);
            } else {
                warningDiv.style.display = "none";
            }
        });
    </script>
}

@functions {
    public (string BadgeClass, string BorderClass, string BgClass, string IconClass) GetTurRenk(string tur)
    {
        string baseColor = "secondary";
        switch (tur)
        {
            case "Roman": baseColor = "primary"; break;
            case "Hikaye": baseColor = "success"; break;
            case "Bilim Kurgu": baseColor = "info"; break;
            case "Distopya": baseColor = "secondary"; break;
            case "Fantastik": baseColor = "info"; break;
            case "Masal": baseColor = "danger"; break;
            case "Tarih": baseColor = "warning"; break;
            case "Kişisel Gelişim": baseColor = "success"; break;
            case "Felsefe": baseColor = "secondary"; break;
            case "Şiir": baseColor = "danger"; break;
            case "Biyografi": baseColor = "primary"; break;
            case "Eğitim": baseColor = "primary"; break;
        }
        return (BadgeClass: $"bg-{baseColor} bg-opacity-10 text-{baseColor}", BorderClass: $"border-{baseColor} border-opacity-25", BgClass: $"bg-{baseColor} bg-opacity-10", IconClass: $"text-{baseColor}");
    }

    public (string BadgeClass, string BorderClass) GetDurumRenk(string durum)
    {
        string color = "secondary";
        switch (durum)
        {
            case "Okunuyor": color = "warning"; break;
            case "Okundu": color = "success"; break;
            case "Yarım Kaldı": color = "danger"; break;
            case "Listede": color = "secondary"; break;
        }
        return (BadgeClass: $"bg-{color} bg-opacity-10 text-{color}", BorderClass: $"border-{color} border-opacity-25");
    }
}