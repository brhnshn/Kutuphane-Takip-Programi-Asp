@{
    ViewData["Title"] = "Hata";
}

<div class="container mt-5 text-center">
    <div class="card border-danger mb-3 mx-auto" style="max-width: 50rem;">
        <div class="card-header bg-danger text-white">
            <h3>⚠️ Bir Sorun Oluştu</h3>
        </div>
        <div class="card-body text-danger">
            <h1 class="display-1 fw-bold">@ViewBag.ErrorCode</h1>
            <h4 class="card-title">Üzgünüz, bir hata meydana geldi.</h4>
            <p class="card-text lead">
                @ViewBag.ErrorMessage
            </p>
            <hr />
            <a asp-controller="Kitap" asp-action="Index" class="btn btn-outline-danger">
                <i class="fa fa-home"></i> Ana Sayfaya Dön
            </a>
        </div>
    </div>
</div>