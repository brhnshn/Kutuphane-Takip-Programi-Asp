@using Microsoft.AspNetCore.Identity
@using Site.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kütüphane Takip</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KütüphaneTakipWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet">

    <script>
        (function() {
            const saved = localStorage.getItem("theme");
            const defaultTheme = "dark";
            document.documentElement.setAttribute('data-bs-theme', saved || defaultTheme);
        })();
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }</style>
</head>

<body class="d-flex flex-column min-vh-100">

    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg glass-panel navbar-glass">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-book-open text-primary fs-3"></i>
                    <span class="fs-4 fw-bold">Kütüphane<span style="font-weight:300; color: inherit;">Takip</span></span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <i class="fas fa-bars"></i>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav ms-auto align-items-center gap-3">

                        <li class="nav-item">
                            <button class="btn btn-sm btn-outline-secondary rounded-circle border-0 d-flex align-items-center justify-content-center"
                                    id="themeToggle"
                                    style="width: 40px; height: 40px;">
                                <i id="themeIcon" class="fas fa-moon"></i>
                            </button>
                        </li>

                        @{
                            // Sayfa bilgisini en başta alıyoruz ki hem giriş yapmış hem yapmamışlar için kullanalım
                            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                            var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                        }

                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            var isim = currentUser?.Ad;
                            var gorunenIsim = !string.IsNullOrEmpty(isim) ? isim : User.Identity.Name;
                            var basHarf = !string.IsNullOrEmpty(gorunenIsim) ? gorunenIsim.Substring(0, 1).ToUpper() : "U";

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" data-bs-toggle="dropdown">
                                    <div class="rounded-circle text-white d-flex align-items-center justify-content-center shadow-sm"
                                         style="width: 40px; height: 40px; background: var(--primary-gradient);">
                                        <span class="fw-bold">@basHarf</span>
                                    </div>
                                    <span class="d-lg-none fw-bold">@gorunenIsim</span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 rounded-4 p-2 mt-2">
                                    <li><h6 class="dropdown-header text-primary fw-bold">@gorunenIsim</h6></li>

                                    @if (!(currentController == "Account" && currentAction == "Profile"))
                                    {
                                        <li>
                                            <a class="dropdown-item rounded-3 py-2" asp-controller="Account" asp-action="Profile">
                                                <i class="fas fa-user-circle me-2 text-info"></i> Profilim
                                            </a>
                                        </li>
                                    }

                                    @if (!(currentController == "Kitap" && currentAction == "Index"))
                                    {
                                        <li>
                                            <a class="dropdown-item rounded-3 py-2" asp-controller="Kitap" asp-action="Index">
                                                <i class="fas fa-th-large me-2 text-primary"></i> Yönetim Paneli
                                            </a>
                                        </li>
                                    }

                                    <li><hr class="dropdown-divider my-1"></li>
                                    <li><a class="dropdown-item rounded-3 py-2 text-danger fw-bold" asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt me-2"></i> Çıkış Yap</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            // --- MİSAFİR KULLANICI ---
                            // Eğer şu an Giriş Yap (Account/Login) sayfasında DEĞİLSEK butonu göster
                            @if (!(currentController == "Account" && currentAction == "Login"))
                            {
                                <li class="nav-item">
                                    <a class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm" asp-controller="Account" asp-action="Login"
                                       style="background: var(--primary-gradient); border:none;">
                                        Giriş Yap
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3 pt-4">
            @RenderBody()
        </main>
    </div>
    <footer class="glass-panel footer-glass">
        <div class="container">
            <div class="row g-4">

                <div class="col-lg-5 col-md-6">
                    <div class="d-flex align-items-center gap-2 mb-3">
                        <i class="fas fa-book-reader text-primary fs-4"></i>
                        <span class="fs-5 fw-bold" style="background: var(--primary-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Kütüphane Takip</span>
                    </div>
                    <p class="text-muted small">
                        Kitaplarınızı kaybetmeyin, okuma hedeflerinizi yönetin ve envanterinizi modern bir arayüzle takip edin.
                    </p>
                    <div class="d-flex gap-3 mt-3">
                        <a href="https://github.com/brhnshn" target="_blank" class="opacity-50 hover-opacity-100"><i class="fab fa-github"></i></a>
                        <a href="https://www.linkedin.com/in/burhan-sahin/" target="_blank" class="opacity-50 hover-opacity-100"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>

                <div class="col-lg-3 col-md-3 col-6 ms-lg-auto">
                    <h5>Menü</h5>
                    <ul class="list-unstyled d-flex flex-column gap-2 small">
                        <li><a href="/Home">Ana Sayfa</a></li>
                        <li><a href="/Kitap">Kütüphanem</a></li>
                        <li><a href="/Account/Profile">Profilim</a></li>
                        <li><a href="/">Kişisel Sayfam</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-3 col-6">
                    <h5>Yasal</h5>
                    <ul class="list-unstyled d-flex flex-column gap-2 small">
                        <li><a asp-controller="Home" asp-action="Privacy">Gizlilik Politikası</a></li>
                    </ul>
                </div>
            </div>

            <hr class="my-4 opacity-25">

            <div class="row align-items-center small text-muted">
                <div class="col-md-6 text-center text-md-start">
                    &copy; @DateTime.Now.Year Kütüphane Takip Sistemi.
                </div>
                <div class="col-md-6 text-center text-md-end">
                    Designed by <span class="fw-bold">Burhan Şahin</span>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>